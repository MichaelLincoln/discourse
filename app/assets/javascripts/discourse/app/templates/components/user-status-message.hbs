<div class="user-status-message">
  {{emoji @status.emoji skipTitle=true}}
  {{#if @showDescription}}
    <span class="user-status-message-description">
      {{@status.description}}
    </span>
  {{/if}}
  <DTooltip>
    {{emoji @status.emoji skipTitle=true}}
    {{@status.description}}
    {{#if this.until}}
      <span class="status-until">{{this.until}}</span>
    {{/if}}
  </DTooltip>
</div>
